# pnpm configuration
# Use strict peer dependencies for better security
strict-peer-dependencies=true

# Auto install peers (but still respect strict-peer-dependencies)
auto-install-peers=true

# Use content-addressable storage for better security
shamefully-hoist=false

# Prevent installation of optional dependencies by default
optional=false

# Use registry with better security
registry=https://registry.npmjs.org/



